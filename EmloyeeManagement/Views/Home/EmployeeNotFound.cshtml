@model int
@{
    ViewBag.Title = "404 Error";
}

<div class="alert alert-danger mt-1 m-md-1">
    <h4>
        404 Not Found Error :
    </h4>
    <hr />
    <h5>
        Employee with ID = @Model cannot be found
    </h5>
</div>
<a asp-action="Index" asp-controller="Home" class="btn btn-outline-success" width="auto">Click here to see the list of all employees</a>